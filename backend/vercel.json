{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "env": {
    "GROQ_API_KEY": "@groq_api_key",
    "COHERE_API_KEY": "@cohere_api_key",
    "TOGETHER_API_KEY": "@together_api_key",
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_KEY": "@supabase_key"
  },
  "functions": {
    "app/main.py": {
      "maxDuration": 60
    }
  }
} 